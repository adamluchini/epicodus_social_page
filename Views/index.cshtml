<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Epicodus Social</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <link rel='stylesheet' href="/Content/css/styles.css">
</head>
<body>
  <div class="page-header">
    <h1>Epicodex Social</h1>
  </div>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/newProfile">New Profile</a></li>
        <li><a href="/loginProfile">Log In</a></li>
      </ul>
    </div>
  </div>
</nav>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <table class="table table-striped">
          <tbody>
            <thead>
              <tr>
                <th>
                  <form action="/test" method="post">
                    <a href="/message/add"><button type="button"  class="btn-primary">New Post</button></a>
                    <label for="band-select-name"></label>
                    <button type = "click" class="btn-primary" style="float: right;">Filter Posts</button>
                    <select name="band-select-name" style="float: right;">
                      <option value="0" selected="selected">View All</option>
                      <option>Announcements</option>
                    </select>
                  </form>
                </th>
              </tr>
            </thead>
            @foreach(var a in Model["manager"].GetMessages())
            {


            <tr>
              <td>
                <h4>Category: @a.GetCategoryName(a.type_id)</h4>
                <h3>Title: @a.title</h3>
                <p>
                  @a.GetName()
                </p>

                <table>
                  <tr>
                    <td>

                    </td>
                    <td>
                      <p>
                        @a.body
                      </p>
                    </td>
                    <td>
                      <form action="/test" method="post">
                        <button type="submit">Add Comment</button>
                      </form>
                    </td>
                  </tr>
                  @foreach(var c in @Model["manager"].GetComments(a.id))
                  {
                  <tr>
                    <td>
                      <form action="/test" method="post">
                        <button type="submit">+</button>
                      </form>
                      <p>
                        5 Likes
                      </p>
                    </td>
                    <td>

                      <blockquote>
                        <p>@c.comment_body</p>
                        <footer>@c.GetName()</footer>
                      </blockquote>
                    </td>
                    <td>

                    </td>
                  </tr>
                }
                </table>


              </td>
            </tr>
          }

          </tbody>
        </table>

      </div>
      <div class="col-md-4">
        <div class="row">
          <div class="row-height">


            <h1><div class="btn-group  btn-group-justified" data-toggle="buttons">
              <label class="btn btn-primary active">
                <input type="checkbox" checked autocomplete="off"> Match
              </label>
              <label class="btn btn-primary">
                <input type="checkbox" autocomplete="off"> Resources
              </label>
            </div></h1>
          </div>
        </div>
        <div class="row">
          <div class="row-height">

            <form action="/match/type" method="post">
              <button type = "submit" class="btn-primary" style="float: right;">Suggest Pair</button>
              <select name="band-select-name" style="float: right;">
                <option value=0>Myers-Briggs</option>
                <option value=1>Hobbies</option>
                <option value=2>Experience</option>
              </select>
            </form>

            <h3>Perfect Matches</h3>
            <ul>
              @foreach(var p in @Model["P"]){
                <li>@p.name</li>
              }
            </ul>

            <h3>Good Matches</h3>
            <ul>
              @foreach(var p in @Model["G"]){
                <li>@p.name</li>
              }
            </ul>


          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
